<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forget_pass"
    tools:context=".ForgetPassActivity">

    <EditText
        android:id="@+id/EmailForget"
        android:layout_width="273dp"
        android:layout_height="36dp"
        android:layout_marginBottom="240dp"
        android:alpha="0.8"
        android:background="@color/white"
        android:ems="10"
        android:hint="Example@mail.com"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/EnterEmailForget"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="@+id/EnterEmailForget" />

    <TextView
        android:id="@+id/EnterEmailForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@color/white"
        android:text="Please Enter Your Email:"
        android:textSize="30dp"
        android:textStyle=""
        app:layout_constraintBottom_toTopOf="@+id/EmailForget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <Button
        android:id="@+id/ResetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/EmailForget"
        app:layout_constraintStart_toStartOf="@+id/EmailForget"
        app:layout_constraintTop_toBottomOf="@+id/EmailForget"
        app:layout_constraintVertical_bias="0.51" />
</androidx.constraintlayout.widget.ConstraintLayout>